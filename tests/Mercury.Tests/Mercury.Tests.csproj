<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <RootNamespace>SkyOmega.Mercury.Tests</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!-- Absolute paths to W3C test submodules, embedded at build time for reliable test runner resolution -->
    <W3CRdfTestsRoot>$([MSBuild]::NormalizePath('$(MSBuildProjectDirectory)', '..', 'w3c-rdf-tests'))</W3CRdfTestsRoot>
    <W3CJsonLdTestsRoot>$([MSBuild]::NormalizePath('$(MSBuildProjectDirectory)', '..', 'w3c-json-ld-api'))</W3CJsonLdTestsRoot>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
      <_Parameter1>W3CRdfTestsRoot</_Parameter1>
      <_Parameter2>$(W3CRdfTestsRoot)</_Parameter2>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
      <_Parameter1>W3CJsonLdTestsRoot</_Parameter1>
      <_Parameter2>$(W3CJsonLdTestsRoot)</_Parameter2>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.*" />
    <PackageReference Include="xunit" Version="2.*" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.*" />
    <PackageReference Include="Xunit.SkippableFact" Version="1.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Mercury\Mercury.csproj" />
    <ProjectReference Include="..\..\src\Mercury.Runtime\Mercury.Runtime.csproj" />
    <ProjectReference Include="..\..\src\Mercury.Pruning\Mercury.Pruning.csproj" />
    <ProjectReference Include="..\..\src\Mercury.Sparql.Tool\Mercury.Sparql.Tool.csproj" />
    <ProjectReference Include="..\..\src\Mercury.Turtle.Tool\Mercury.Turtle.Tool.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="xunit.runner.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
